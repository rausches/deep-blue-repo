@model List<Uxcheckmate_Main.ViewModels.AdminFeedbackViewModel>
@{
    ViewData["Title"] = "Admin Feedback";
    var feedbackIndex = 0;
}
<div class="container admindash-wrapper">
    <header class="myAdminFeedbackHeader">
        <h1 class="display-1 my-dashboard-text">User Feedback</h1>
        <small class="text-muted">What People Are Saying...</small>
    </header>

    <div class="container my-5">
        <div class="row row-cols-1 g-4">
            @foreach (var user in Model){
                var currentIndex = feedbackIndex++;
                <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="row h-100 d-flex align-items-center">
                            @* Left side *@
                            <div class="col-md-4">
                                <div class="card-title">
                                    <div class="text-center">
                                        <img src="https://ui-avatars.com/api/?name=@(Uri.EscapeDataString(user.UserId))&background=0D8ABC&color=fff&length=1" class="rounded-circle img-fluid" alt="@user.UserId" width="80" height="80" >
                                        <h5 class="card-title">@user.UserId</h5>
                                        <span class="badge bg-primary">@user.Feedbacks.Count</span>
                                        <span class="badge bg-secondary">Feedbacks</span>
                                        <form method="post" asp-action="DeleteAllFeedback" asp-controller="Admin" onsubmit="return confirm('Are you sure you want to delete ALL feedback from this user?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="userId" value="@user.UserId" />
                                                <button type="submit" class="btn btn-sm btn-danger bi-trash"> Delete All Feedback 
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                                    class="bi bi-trash" viewBox="0 0 16 16">
                                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                                                </svg>
                                                </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            @* Right side *@
                            <div class=" col-md-8 text-center">
                                        @* Card Carousel *@
                                        <div id="carouselFeedback@(currentIndex)" class="carousel slide" data-bs-ride="carousel">
                                            <div class="carousel-inner">
                                                @if (user.Feedbacks.Any()){
                                                    int feedbackCount = user.Feedbacks.Count;
                                                    for (int i = 0; i < feedbackCount; i++){
                                                        var feedback = user.Feedbacks.OrderByDescending(f => f.DateSubmitted).ElementAt(i);
                                                        <div class="carousel-item @(i == 0 ? "active" : "")">
                                                            <p class="card-text"><strong>"@feedback.Message"</strong></p>
                                                            <small class="text-muted">Submitted on @feedback.DateSubmitted.ToLocalTime().ToString("MMMM dd, yyyy")
                                                            <form method="post" asp-action="DeleteFeedback" asp-controller="Admin" asp-route-id="@feedback.Id" onsubmit="return confirm('Are you sure you want to delete this feedback?');">
                                                                Delete
                                                                <button type="submit" class="btn btn-sm bi-trash"> 
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red"
                                                                    class="bi bi-trash" viewBox="0 0 16 16">
                                                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                                                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                                                                </svg>
                                                                </button>
                                                            </form>
                                                            </small>
                                                        </div>
                                                    }
                                                }else{
                                                    <div class="carousel-item active">
                                                        <p class="card-text"><em>No feedback submitted.</em></p>
                                                    </div>
                                                }
                                            </div>
                                            @* Carousel controls *@
                                                <button class="carousel-control-prev" type="button" data-bs-target="@($"#carouselFeedback{currentIndex}")" data-bs-slide="prev">
                                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                    <span class="visually-hidden">Previous</span>
                                                </button>
                                                <button class="carousel-control-next" type="button" data-bs-target="@($"#carouselFeedback{currentIndex}")" data-bs-slide="next">
                                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                    <span class="visually-hidden">Next</span>
                                                </button>
                                        </div>
                                </div>
                        </div>
                    </div>
                </div>
        </div>
    }
    </div>
</div>