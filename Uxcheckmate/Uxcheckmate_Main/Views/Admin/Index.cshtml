@model List<Uxcheckmate_Main.ViewModels.AdminUserViewModel>

@{
    ViewData["Title"] = "Admin Dashboard";
    var reportIndex = 0;
}

<div class="container admindash-wrapper">


    <header class="myAdminDashHeader">
        <h1 class="display-4 my-dashboard-text">Admin Dashboard</h1>
        <form method="post" asp-area="Identity" asp-page="/Account/Logout">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-dark btn-global">Logout</button>
        </form>

    </header>

    <div class="container mt-4">
        @if (Model.Count == 0)
        {
            <p>No users found.</p>
        }
        else
        {
            <table class=" table table-bordered">
                <thead>
                    <tr class="table-header">
                        <th>User Account</th>
                        <th>Reports</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var user in Model.OrderBy(u => u.User.Email))
                {
                    var collapseId = $"collapseReports{reportIndex++}";
                    <tr>
                        <td style="width: 35%;">
                            <form method="post" asp-action="DeleteUser" asp-controller="Admin" asp-route-id="@user.User.Id" onsubmit="return confirm('Are you sure you want to delete this user and all associated data?');" class="mt-2">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger" style="margin-right: 5%;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                                    </svg>
                                </button>
                                <strong>@user.User.Email</strong>
                            </form>
                        </td>
                        <td>
                            @if (user.Reports.Any())
                            {                                
                                @* <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                                    <span class="badge report-count-badge">@user.Reports.Count</span><span class="ms-2">View Report(s)</span>
                                </button> *@
                                <button type="button" class="btn btn-link"
                                        onclick="document.getElementById('@collapseId').classList.toggle('show')">
                                        <span class="badge report-count-badge">@user.Reports.Count</span><span class="ms-2">View Report(s)</span>
                                </button>

                                <div class="collapse mt-2" id="@collapseId">
                                    <ul class="list-unstyled">
                                        @foreach (var report in user.Reports.OrderBy(r => r.Date))
                                        {
                                        <li class="mb-2 border-bottom pb-2">
                                        <div class="d-flex">
                                            <!-- Left: Delete Button -->
                                            <div class="me-3">
                                            <form method="post" asp-action="DeleteReport" asp-controller="Admin" asp-route-id="@report.Id" onsubmit="return confirm('Are you sure you want to delete this report?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger bi-trash"> Delete Report
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                                    class="bi bi-trash" viewBox="0 0 16 16">
                                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                                                </svg>
                                                </button>
                                            </form>
                                            </div>

                                            <!-- Right: Report Info -->
                                            <div>
                                            <p class="mb-1"><strong>Date:</strong> @report.Date.ToString("MMMM dd, yyyy")</p>
                                            <p class="mb-0">
                                                <strong>Webpage:</strong>
                                                <a href="@report.Url" target="_blank">@report.Url</a>
                                            </p>
                                            </div>
                                        </div>
                                        </li>

                                        }
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <em>No reports submitted</em>
                            }
                        </td>

                    </tr>
                }

                </tbody>
            </table>
        }
    </div>
</div>