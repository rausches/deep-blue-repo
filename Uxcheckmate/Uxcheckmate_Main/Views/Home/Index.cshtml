@model Uxcheckmate_Main.Models.ReportUrl

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Let's analyze your site!</h1>

    <form method="post" id="urlForm" onsubmit="return validateURL()">
        <div class="form-group">
            <label for="url">Enter the URL of the site you want to analyze:</label>
            <input type="text" class="form-control" id="urlInput" placeholder="Enter URL (e.g., uxcheckmate.com)">
        </div>
        <button type="submit" id="urlSubmitBtn" class="btn btn-primary">Submit</button>
    </form>
    <div id="confirmationMessage" class="mt-3">
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-info">@ViewBag.Message</div>
        }
    </div>
</div>
<script src="~/js/handleUserUrl.js"></script>
