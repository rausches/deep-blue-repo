@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="main full-screen">
    <div class="container scanContainer d-flex justify-content-center align-items-center min-vh-100">
        <div class="col-md-5 text-center">
            <img src="~/images/login_chess.png" alt="Checkmate move" class="img-fluid mb-4 theme-chess-piece" style="max-height: 100px;" />

            <h1 class="mb-3">Welcome Back</h1>
            <p class="mb-4">Log in to your UxCheckmate account.</p>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="input-field-text">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="password" />
                    <label asp-for="Input.Password" class="input-field-text">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <button id="login-submit" type="submit" class="btn btn-dark btn-global">Log in</button>
            </form>

            <hr class="my-4" />

            <!-- Custom GitHub OAuth button using your ExternalAuthController -->
            <a href="/auth/github" class="btn btn-outline-dark d-inline-block mt-2">
                <img src="https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png" width="20" class="me-2" />
                Sign in with GitHub
            </a>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
